@using iTechArt.TestApplication.Web.ViewModels
@model CalculateViewModel

@{
    ViewBag.Title = "Сalculate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<div class="row">
    <div class="col-md-4">
        <label>Depot</label>
        @if (Model.Depots!= null)
        { 
            <select id="DepotId" class="form-control">
                @foreach (var depot in Model.Depots)
                {
                    <option value="@depot.Id">@depot.DepotName</option>

                }
            </select>
        }
    </div>
    <div class="col-md-4">
        @if (Model.DrugTypes.Count()!= 0)
        {
            <div id="DrugTypes">
                @foreach (var drugType in Model.DrugTypes)
                {
                    <label>@drugType.DrugTypeName</label>
                    <input id="@drugType.Id" value="" class="form-control" />
                }
            </div>
        }
        else
        {
            <label>No drug types</label>
        }
    </div>
    <div class="col-md-4">
        <br>
        <button id="calculate" class="btn btn-success">Calculate</button>
    </div>
</div>
<br>
<div id="results"></div>

    <script language="javascript" type="text/javascript">
        $('button#calculate').click(function () {
            var count = @Html.Raw(Json.Encode(@Model.DrugTypes.Count()));
            var depot=$('#DepotId').val();
            var numbers = [];

            for (var i = 1; i <= count; i++)
            {
                numbers.push($('#' + i).val());
            }

            var data={depotId:depot, numbers:numbers};

            $('#results').load('UnitsSearch?'+ $.param(data, true));
        });
    </script>
